    "access": "public"
  },
  "release-it": {
    "git": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/declarative-dom/ddom.git"
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf dist",
