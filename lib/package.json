    "@rollup/plugin-typescript": "^12.1.4",
    "@ryoppippi/unplugin-typia": "^2.6.5",
    "rollup": "^4.44.2",
    "signal-polyfill": "^0.2.2",
    "ts-patch": "^3.3.0",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/lib/src/index.d.ts"
    }
  },
  "homepage": "https://github.com/declarative-dom/ddom/tree/main/lib#readme",
  "keywords": [
    "declarative",
    "dom",
    "components",
    "spec",
    "ui",
    "typescript",
    "json",
    "data-structure"
